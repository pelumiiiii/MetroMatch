# MetroMatch Environment Configuration
# Copy this file to .env and fill in your values

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=metromatch

# GetSongBPM API Configuration
# Get your API key from: https://getsongbpm.com/api
GETSONGBPM_API_KEY=your_api_key_here

# Application Settings
USE_SCRAPER=true
AUTO_SYNC=false
DEFAULT_BPM=120

# Logging
LOG_LEVEL=INFO
LOG_FILE=metromatch.log

# Metronome Settings
SOUND_BACKEND=auto  # Options: auto, pygame, simpleaudio, pyaudio, none
